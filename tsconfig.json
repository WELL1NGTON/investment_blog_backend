{
  "compilerOptions": {

    "target": "es5" ,
    "module": "commonjs",
    "allowJs": true,
    "outDir": "./dist",
    "rootDir": "./src",

    "strict": true,
    "baseUrl": "./src",
    "paths": {
      "@modules/*": ["modules/*"],
      "@config/*": ["config/*"],
      "@shared/*": ["shared/*"]
    },
    "esModuleInterop": true ,
    "experimentalDecorators": true ,

    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true
  }
}
